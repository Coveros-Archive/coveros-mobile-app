<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/title"
        android:text="@string/comment_form_label"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:padding="2dip"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/enter_name"
        android:layout_width="352dp"
        android:layout_height="42dp"
        android:layout_weight="1"
        android:hint="@string/comment_form_name_hint"
        android:lines="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <EditText
        android:id="@+id/enter_email"
        android:layout_width="352dp"
        android:layout_height="44dp"
        android:layout_weight="1"
        android:hint="@string/comment_form_email_hint"
        android:layout_below="@+id/enter_name"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/enter_name"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/edit_message"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/comment_form_message_hint"
        android:inputType="textCapSentences|textMultiLine"
        android:lines="6"
        android:maxLength="2000"
        android:maxLines="10"
        android:layout_below="@+id/enter_email"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/enter_email"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button android:id="@+id/button_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comment_form_send_button"
        android:onClick="sendMessage"
        android:layout_below="@+id/edit_message"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_message"
        android:layout_marginEnd="16dp" />
</android.support.constraint.ConstraintLayout>
